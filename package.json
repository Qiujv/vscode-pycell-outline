{
  "name": "pycell-outline",
  "displayName": "Python Cell Outline",
  "description": "Show #%% cell titles in Outline view for Python scripts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Python Cell Outline",
      "properties": {
        "pycellOutline.pattern": {
          "type": "string",
          "default": "^#%%\\s*(.*)$",
          "description": "Regex to match cell titles"
        }
      }
    },
    "views": {
        "explorer": [
            {
                "id": "pycellOutlineView",
                "name": "iPython Cells"
            }
        ]
    },
    "commands": [
        {
            "command": "pycellOutline.revealLine",
            "title": "Reveal Line"
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tslint": "^6.1.3"
  }
}
